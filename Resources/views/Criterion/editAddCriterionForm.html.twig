{% form_theme form "IcapDropzoneBundle::form_theme_bootstrap3.html.twig" %}

<form class="form-horizontal" method="POST" action="{{ path('icap_dropzone_edit_create_criterion', {'resourceId': dropzone.id, 'page':page, 'criterionId':criterion.id}) }}">
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-12">
            <label for="icap_dropzone_criterion_form_instruction">{{ 'icap_dropzone_criterion_form_instruction'|trans({}, 'icap_dropzone') }}</label>
        </div>
    </div>
    <div class="row">
        {{ form_row(form.instruction, {'label_col_size': ' ', 'input_col_size': 'col-md-12', 'label_attr': {'style': 'display: none;'}}) }}
    </div>

    <div class="column-input">
        {{ form_row(form.totalCriteriaColumn) }}
    </div>

    <div class="comment-input">
        {{ form_row(form.allowCommentInCorrection) }}
    </div>

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10 btn-group form-buttons">
            <a href="{{ path('icap_dropzone_edit_criteria_paginated', {'resourceId': dropzone.id, 'page':page}) }}" class="btn btn-default">{{ 'Cancel'|trans({}, 'icap_dropzone') }}</a>
            <button type="submit" class="btn btn-primary">
                {% if criterion.id == 0 %}
                    {{ 'Create'|trans({}, 'icap_dropzone') }}
                {% else %}
                    {{ 'dropzone_edit'|trans({}, 'icap_dropzone') }}
                {% endif %}
            </button>
        </div>
    </div>
{{ form_end(form) }}