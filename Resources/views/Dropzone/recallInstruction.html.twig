<div class="panel-group" id="recall-instruction-accordion">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#recall-instruction" href="#recall-instruction">
                <h4 class="panel-title">
                    <span class="glyphicon icon-angle-down"></span>
                    <span class="glyphicon icon-angle-right" style="display: none;"></span>
                    {{ 'Recall instructions'|trans }}
                </h4>
            </a>
        </div>
        <div id="recall-instruction" class="panel-collapse collapse">
            <div class="panel-body">
                {{ dropzone.instruction|raw }}
            </div>
        </div>
    </div>

    <style>
        .panel-default > .panel-heading {
            background-color: #fff;
        }
    </style>

    <script>
        $(document).on('ready', function() {
            $('#recall-instruction').on('hide.bs.collapse', function () {
                $('#accordion .icon-angle-down').show();
                $('#accordion .icon-angle-right').hide();
            });
            $('#recall-instruction').on('show.bs.collapse', function () {
                $('#accordion .icon-angle-right').show();
                $('#accordion .icon-angle-down').hide();
            });
        });
    </script>
</div>