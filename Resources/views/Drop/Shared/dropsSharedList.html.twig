{# Affichage du tableau de l'onglet "Espaces partagés" #}
<tr>
    {# Affichage de l'image de profil #}
    {% if dropzone.picture == 1  %}
        <td>
            <div class="user-panel">
                <div class="pull-left image">
                    {% if drop.user.getPicture() != '' %}
                        <img src="{{ asset('uploads/pictures/') ~ drop.user.getPicture() }}"
                        class=""
                        alt="{{ drop.user.getLastName() ~ ' ' ~ drop.user.getFirstName() }}">
                    {% else %}
                        <img class="pull-left image img-polaroid img-responsive" src="{{ asset('bundles/icapnotification/images/default-avatar.png') }}">
                  {% endif %}
                </div>
            </div>
        </td>
    {% endif %}

    <td>{{ drop.user.lastName|upper }}</td>
    <td>{{ drop.user.firstName|capitalize }}</td>

    {% if dropzone.username == 1  %}
        <td>{{ drop.user.userName|capitalize }}</td>
    {% endif %}

    <td class="centered">
        {# Afficher ici la valeur "Documents déposés" #}
        {% include 'InnovaCollecticielBundle:Document:documentsNbDocDropped.html.twig' %}
    </td>
    <td class="centered">
        {# Afficher ici la valeur "Demandes adressées" #}
        {% include 'InnovaCollecticielBundle:Document:documentsNbAddressedRequests.html.twig' %}
    </td>
    <td class="centered"> {# Appel de la vue "Espaces collecticiel". #}
        <div class="btn-group">
            <a href="{{ path('innova_collecticiel_drop_switch_admin',
            {'resourceId': dropzone.id, 'userId': drop.user.id}
            ) }}" type="button" class="btn btn-default btn-sm">
                {{ 'To display'|trans({}, 'innova_collecticiel') }}
            </a>
        </div>
    </td>
</tr>
