<div class="table-responsive">
    <table class="table   table-striped table-hover  ">
        <thead>
        <th>{{ 'Established on'|trans({}, 'innova_collecticiel') }}</th>
        <th>{{ 'Made by'|trans({},'innova_collecticiel') }}</th>
        <th>{{ 'Last correction'|trans({}, 'innova_collecticiel') }}</th>
        <th>{{ 'Grade'|trans({}, 'innova_collecticiel') }}</th>
        {% if AwaitingMode is defined and  AwaitingMode == true %}
            <th> {{ 'Corr.'|trans({}, 'innova_collecticiel') }} </th>
        {% endif %}
        <th>{{ 'tools'|trans({},'innova_collecticiel') }}</th>
        </thead>
        <tbody>
        {% for drop in pager.currentPageResults %}
            <tr>
                <td>
                    <a href="{{ path('innova_collecticiel_drops_detail', {'resourceId': dropzone.id, 'dropId': drop.id}) }}"
                       title="{{ 'See copy'|trans({}, 'innova_collecticiel') }}">
                        {{ drop.dropDate|date('formatDatetime'|trans({}, 'innova_collecticiel')) }}
                        {% if drop.reported %}
                            <span class="text-danger fa fa-exclamation-triangle" data-toggle="tooltip" title=""
                                  data-original-title="{{ 'This copy has been reported'|trans({}, 'innova_collecticiel') }}"></span>
                        {% endif %}
                        {% if drop.unlockedDrop %}
                            <span class="text-warning fa fa-info-circle" data-toggle="tooltip" title=""
                                  data-original-title="{{ 'This copy has been unlocked by admin.(it did not received the expected number of correction)'|trans({}, 'innova_collecticiel') }}"></span>
                        {% endif %}
                    </a>
                </td>
                <td>
                    {{ drop.user.firstName|capitalize }} {{ drop.user.lastName|upper }}
                </td>
                <td>
                    {% include 'InnovaCollecticielBundle:Drop:dropsLastCorrectionDate.html.twig' %}
                    {% if drop.getHasDeniedCorrection %}
                        <span class="fa fa-exclamation-triangle" data-toggle="tooltip" title=""
                              data-original-title="{{ 'This copy contain a denied correction'|trans({}, 'innova_collecticiel') }}"></span>
                    {% endif %}
                </td>
                <td>
                    {% include 'InnovaCollecticielBundle:Drop:dropsTotalGrade.html.twig' %}
                </td>
                {% if AwaitingMode is defined and  AwaitingMode == true %}
                    <td>
                        {% include 'InnovaCollecticielBundle:Drop:dropsNbCorrections.html.twig' %}
                    </td>
                {% endif %}
                <td>
                    <div class="btn-group ">

                        {% if AwaitingMode is defined and  AwaitingMode == true %}
                            <a href="{{ path('innova_collecticiel_drops_detail_add_correction', {'resourceId': dropzone.id, 'dropId': drop.id}) }}"
                               type="button"
                               class="btn btn-default btn-xs">{{ 'Add a correction'|trans({}, 'innova_collecticiel') }}</a>
                            {#  --------------- UNLOCKED BUTTON ---------------- #}
                            {# if the dropzone is finished, show unlock buttons #}
                            {% if dropzone.isFinished %}
                                {% if drop.corrections|length == 0 %}
                                    <a href="#" class="btn btn-default btn-xs disabled" data-toggle="tooltip"
                                       data-placement="left"
                                       title="{{ 'You need at least one correction on the copy to unlock it'|trans({}, 'innova_collecticiel') }}">{{ 'Unlock copy'|trans({}, 'innova_collecticiel') }}</a>
                                {% else %}
                                    {% if(drop.unlockedDrop) %}
                                        <a href="#"
                                           class="btn btn-default btn-xs disabled">{{ 'Unlocked copy'|trans({}, 'innova_collecticiel') }}</a>
                                    {% else %}
                                        <a href="{{ path('innova_collecticiel_unlock_drop', {'dropId':drop.id}) }}"
                                           type="button"
                                           class="btn btn-default btn-xs" data-placement="left" data-toggle="tooltip"
                                           title="{{ "Allow student to see his copy whereas the copy didn't received the expected number of correction."|trans({}, 'innova_collecticiel') }}">{{ 'Unlock copy'|trans({}, 'innova_collecticiel') }}</a>

                                    {% endif %}
                                {% endif %}
                            {% endif %}
                            {#  --------------- END UNLOCKED BUTTON  --------------- #}
                        {% endif %}
                        <a href="{{ path('innova_collecticiel_drops_delete', {'resourceId': dropzone.id, 'dropId': drop.id, 'tab': 0, 'page': pager.currentPage}) }}"
                           class="btn btn-danger btn-xs launch-modal"><span
                                    class="fa fa-trash-o"></span> {{ 'Delete copy'|trans({}, 'innova_collecticiel') }}
                        </a>
                    </div>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<script src="{{ asset('bundles/icapdropzone/js/tooltip.js') }}"></script>