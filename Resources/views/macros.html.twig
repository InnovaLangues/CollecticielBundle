{% macro displayDocumentsList(drop, dropzone, width, mode, documentListText ) %}
    <div class="row">
        <div class="col-md-{{ width }}">
            {% if documentListText is not null %}
                <div class="text-muted">{{ documentListText }}</div>
            {% endif %}
            <table class="table table-responsive {% if mode == "condensed" %}table-condensed{% endif %} well table-striped">
                {% if drop.documents|length <= 0 %}
                    <tr>
                        <td>{{ 'No document associated'|trans({},'innova_collecticiel') }}</td>
                    </tr>
                {% else %}
                    <thead>
                        <tr class="text-left">
                            <th></th>
                            <th>{{ 'Type of document'|trans({}, 'innova_collecticiel') }}</th>
                            <th>{{ 'Name of document'|trans({}, 'innova_collecticiel') }}</th>
                            <th>{{ 'Validated document'|trans({}, 'innova_collecticiel') }}<th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for index, document in drop.documents %}
                            <tr>
                                <td>{{ 'Document nÂ°%count%'|trans({'%count%': index + 1}, 'innova_collecticiel') }}</td>
                                <td>{{ (document.type~'_type')|trans({}, 'innova_collecticiel') }}</td>
                                <td>
                                    {% if document.url is not null %}
                                        <a target="_blank"
                                           href="{{ document.url }}">{{ document.url | length > 40 ? document.url | slice(0, 40) ~ '...' :document.url }}</a>
                                    {% else %}
                                        <a target="_blank"
                                           href="{{ path('innova_collecticiel_open_resource', {'resourceId': dropzone.id, 'documentId': document.id}) }}">{{ document.resourceNode.name }}</a>
                                    {% endif %}
                                </td>

                                <td>
                                    <input id="collecticiel-display" value="actif" type="checkbox" class="form-control" name="collecticiel-display" />
                                </td>

                                {% if mode == 'complete' %}
                                    <td>
                                        <a href="{{ path('innova_collecticiel_delete_document', {'resourceId': dropzone.id, 'dropId': drop.id, 'documentId': document.id}) }}"
                                           class="btn btn-danger btn-sm pull-right launch-modal">
                                            <span class="fa fa-trash-o"></span>
                                            {{ 'Delete'|trans({}, 'innova_collecticiel') }}
                                        </a>
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    </tbody>
                {% endif %}
            </table>
        </div>
    </div>
{% endmacro %}