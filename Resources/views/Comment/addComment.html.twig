{% block dropzone_add_comment %}
    <h3>{{ 'Add comment'|trans({}, 'innova_collecticiel') }}</h3>
    <div class="">
        <form class="form-horizontal" role="form" method="POST" 
        action="{{ path('innova_collecticiel_add_comment',
        {'documentId': document.id, 'userId': user.id, 'dropzoneId': dropzone.id, 'correctionId': correction.id}) }}">
            {{ form(formComment) }}
        </form>
    </div>
{% endblock %}

