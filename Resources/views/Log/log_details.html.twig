{% extends 'ClarolineCoreBundle:Log:view_details.html.twig' %}

{% block logDetailsContext %}
    {{ parent() }}
    {% if constant('Icap\\DropzoneBundle\\Event\\Log\\LogDropzoneConfigureEvent::ACTION') == log.action %}
        {% include 'IcapDropzoneBundle:Log:log_details_dropzone.html.twig' %}
    {% elseif constant('Icap\\DropzoneBundle\\Event\\Log\\LogCriterionCreateEvent::ACTION') == log.action %}
        {% include 'IcapDropzoneBundle:Log:log_details_criterion_create.html.twig' %}
    {% elseif constant('Icap\\DropzoneBundle\\Event\\Log\\LogCriterionUpdateEvent::ACTION') == log.action %}
        {% include 'IcapDropzoneBundle:Log:log_details_criterion_update.html.twig' %}
    {% elseif constant('Icap\\DropzoneBundle\\Event\\Log\\LogCriterionDeleteEvent::ACTION') == log.action %}
        {% include 'IcapDropzoneBundle:Log:log_details_criterion_delete.html.twig' %}
    {% endif %}
{% endblock %}