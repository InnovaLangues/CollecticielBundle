<div class='list-group'>
	<div class='list-group-item'>
		{% if log.details.report is defined %}
            <h4>{{ ('Reported copy')|trans({}, 'innova_collecticiel') }}</h4>
            <dl class="dl-horizontal">
                <dt>{{ 'Report reason'|trans({}, 'innova_collecticiel') }}:</dt>
                <dd>{{ log.details.report.report_comment|raw }}</dd>
		    </dl>
            {% if log.details.report.dropzoneId is defined %}
                <dl class="dl-horizontal">
                    <dt>{{ 'Reported copy'|trans({}, 'innova_collecticiel') }}:</dt>
                    <dd>
                        <a href={{ path('innova_collecticiel_drop_detail_by_user',{'resourceId':log.details.report.dropzoneId,'dropId':log.details.report.dropId}) }}>{{ 'copy'|trans({}, 'innova_collecticiel') }}</a>
                    </dd>
                </dl>
            {% endif %}
        {% endif %}
		{% if log.details.report is defined and log.details.report.drop is defined and  log.details.report.drop.documents is defined %}
		    <h4>{{ ('log_drop_documents')|trans({}, 'log') }}</h4>
			    {% for document in  log.details.report.drop.documents %}
			    	test
			        {% include 'InnovaCollecticielBundle:Log:log_details_document.html.twig' with {'document': document} %}
			    {% endfor %}
		{% endif %}
	</div>
</div>