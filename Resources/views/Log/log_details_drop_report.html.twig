<div class='list-group'>
	<div class='list-group-item'>
		{% if log.details.report is defined %}
		    <h4>{{ ('Reported copy')|trans({}, 'log') }}</h4>
		    <dl class="dl-horizontal">
		        <dt>{{ 'Report reason :'|trans({}, 'icap_dropzone') }}</dt>
		        <dd>{{ log.details.report.report_comment|raw }}</dd>
		    </dl>
		{% endif %}
		{% if log.details.report is defined and log.details.report.drop is defined and  log.details.report.drop.documents is defined %}
		    <h4>{{ ('log_drop_documents')|trans({}, 'log') }}</h4>
			    {% for document in  log.details.report.drop.documents %}
			    	test
			        {% include 'IcapDropzoneBundle:Log:log_details_document.html.twig' with {'document': document} %}
			    {% endfor %}
		{% endif %}
	</div>
</div>