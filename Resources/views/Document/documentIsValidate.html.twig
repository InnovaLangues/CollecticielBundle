{# Si le document a été demandé en évaluation alors je ne peux plus le faire #}
{# Cf popup.js #}
{# Ajout de la classe document_validate pour la validation du document #}
{# Si le collecticiel n'est pas ouvert, il n'est pas possible de demander une évaluation. InnovaERV #}

{# Si aucune demande n'a pas transmise ... #}
{% if not document.validate %}
	{# Si le collecticiel est ouvert ... #}
    {% if collecticielOpenOrNot %}
		{# flèche bleue : arrow right #}
		<a href="#validate-modal" data-toggle="modal" data-dropzone_id="{{ dropzone.id }}" data-document_id="{{ document.id }}" id="document_id_{{ document.id }}" name="document_id_{{ document.id }}" class="document_validate" >
	        <span data-toggle="tooltip" data-placement="top" data-original-title="{{ 'To add a return receipt'|trans({},'innova_collecticiel') }}" class="fa fa-hand-o-right">
	        </span>
		</a>
	{% endif %}
{% else %}
	{# un "v" : check #}
    <i class="fa fa-check" data-toggle="tooltip" data-placement="top" data-original-title="{{ 'Request sent'|trans({},'innova_collecticiel') }}"></i>
{% endif %}
