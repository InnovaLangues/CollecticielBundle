<div id="modal-content" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 id="myModalLabel">
                    {{ 'Delete a document'|trans({}, 'innova_collecticiel') }}
                </h4>
            </div>
            <div class="modal-body">
                {{ 'Are you sure to want to delete this document'|trans({}, 'innova_collecticiel') }}
                {% include "InnovaCollecticielBundle:Document:deleteDocumentForm.html.twig" %}
            </div>
            <div class="modal-footer">
                    <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">{{ 'Cancel'|trans({}, 'innova_collecticiel') }}
                    </button>
                    <button id="form-submit" class="btn btn-danger"
                            data-document_adminInnova="99">
                        {{ 'Delete'|trans({}, 'innova_collecticiel') }}
                    </button>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.form-buttons').hide();

            $('#form-submit').on('click', function () {
                //I do the "click" on submit button for keep html5 warning
                $('.modal-body button[type="submit"]').trigger('click');
            });
        });
    </script>
</div>
